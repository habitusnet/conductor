{
  "name": "@conductor/dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "Web dashboard for Conductor orchestration",
  "scripts": {
    "dev": "next dev --port 3100",
    "build": "NODE_ENV=production next build",
    "build:cloudflare": "npx @cloudflare/next-on-pages",
    "build:firebase": "NODE_ENV=production next build",
    "start": "next start --port 3100",
    "preview": "wrangler pages dev .vercel/output/static --compatibility-date=2024-01-01 --compatibility-flag=nodejs_compat",
    "deploy": "wrangler pages deploy .vercel/output/static --project-name=conductor-dashboard",
    "deploy:firebase": "firebase deploy --only hosting,firestore:rules",
    "deploy:firebase:functions": "firebase deploy --only functions",
    "deploy:firebase:all": "firebase deploy",
    "d1:create": "wrangler d1 create conductor-db",
    "d1:migrate": "wrangler d1 execute conductor-db --file=./migrations/001_init.sql",
    "d1:migrate:local": "wrangler d1 execute conductor-db --local --file=./migrations/001_init.sql",
    "firebase:emulators": "firebase emulators:start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next .vercel .firebase"
  },
  "dependencies": {
    "@conductor/e2b-runner": "*",
    "@conductor/state": "*",
    "firebase-admin": "^13.0.2",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.0",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "firebase-tools": "^13.29.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wrangler": "^3.99.0"
  }
}
